  <div class="utility">
: if ! $no_hide {
  <a class="toggle show" style="display:none" href=""><: _('show') :></a>
  <a class="toggle hide" href=""><: _('hide') :></a>
: }

: if $admin {
  <a href="<: $prefix :>admin/entry/<: $entry.id :>"><: _('edit') :></a>
<form class="delete entry">
<input type="hidden" name="id" value="<: $entry.id :>" />
<a href="" class="delete"><: _('delete') :></a>
<input class="hidden" type="submit" />
</form>
: }
  </div>
