  <div class="utility">
: if ! $no_hide {
  <a class="toggle show" style="display:none" href=""><: _('show') :></a>
  <a class="toggle hide" href=""><: _('hide') :></a>
: }

: if $admin {
  <a href="<: $prefix :>admin/entry/<: $entry.id :>"><: _('edit') :></a>
<a href="" name="<: $entry.id :>" class="delete-entry"><: _('delete') :></a>
: }
  </div>
