: if template_exists( 'entry_' ~ $entry.type ~ '.tx' ) {
:   include 'entry_' ~ $entry.type ~ '.tx';
: }
: else {
<div id="<: $entry.id :>" class="entry <: $entry.type :>">
: if template_exists( 'entry_' ~ $entry.type ~ '_title.tx' ) {
:   include $entry.type ~ '_title.tx';
: } else {
:   include 'entry_title.tx';
: }

: if template_exists( 'entry_' ~ $entry.type ~ '_meta.tx' ) {
:   include 'entry_' ~ $entry.type ~ '_meta.tx' { entry => $entry };
: } else {
:   include "entry_meta.tx" { entry => $entry }
: }

: if template_exists( 'entry_' ~ $entry.type ~ '_content.tx' ) {
:   include 'entry_' ~ $entry.type ~ '_content.tx' { entry => $entry };
: } else {
:   include "entry_content.tx" { entry => $entry };
: }
</div>
: }
